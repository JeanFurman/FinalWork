
@model Cliente
<div class="container">
    <form asp-action="Alterar">
        <fieldset>
            <legend>Alterar Cliente</legend>
            <div class="form-group">
                <label>Nome:</label>
                <input type="hidden" asp-for="ClienteId" />
                <input class="form-control" type="text" asp-for="Nome" /><br />
            </div>

            <div class="form-group">
                <label>Cpf:</label>
                <input class="form-control" type="text" asp-for="Cpf" /><br />
            </div>

            <div class="form-group">
                <label>Data de Nascimento:</label>
                <input class="form-control" type="date" asp-for="DataNasc" /><br />
            </div>

            <div class="form-group">
                <label>Contato:</label>
                <input class="form-control" type="text" asp-for="Contato" /><br />
                <input type="submit" value="Salvar" class="btn btn-secondary" />
            </div>
        </fieldset>
    </form>
</div>



