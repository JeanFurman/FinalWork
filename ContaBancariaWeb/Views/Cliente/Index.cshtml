
@model List<Cliente>
@{
    DateTime dataHota = ViewBag.DataHora;
}
<h1>Gerenciamento de Clientes</h1>
<a asp-action="Cadastrar" class="btn btn-info">Cadastrar Cliente</a>

<table class="table table-hover table-striped" style="margin-top:15px; margin-bottom:15px">
    <thead>
        <tr class="table-secondary">
            <th>Nome</th>
            <th>Cpf</th>
            <th>Data de Nascimento</th>
            <th>Contato</th>
            <th>Criado em</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Cliente item in Model)
        {
            <tr class="table-light">
                <td > @item.Nome_da_Pf</td>
                <td > @item.Numero_de_Cpf</td>
                <td > @item.Data_Nascimento.ToString()</td>
                <td > @item.Contato</td>
                <td > @item.CriadoEm</td>
                <td><a asp-action="Remover" asp-route-id="@item.ClienteId" style="color:white" class="btn btn-danger">Remover</a></td>
                <td><a asp-action="Alterar" asp-route-id="@item.ClienteId" style="color:white" class="btn btn-success">Alterar</a></td>
            </tr>
        }
    </tbody>
</table>
<b>Dados Atualizados: </b> @dataHota

