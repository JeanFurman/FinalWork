@{ 
    string value = ViewBag.Valor;
}
<div class="container">
    <form asp-action="Emprestimo"> 
        <div asp-validation-summary="ModelOnly" class="text-warning"></div  >
        <table style="border: solid; text-align: center; width: 600px; margin-left: 550px; margin-bottom: 10px;">
            <thead>
                <tr style="border-bottom: solid">
                    <th>Saldo</th>
                    <th>Valor Max. Empréstimo</th>
                </tr>
            </thead>
            <tbody>
                <tr style="border-bottom: groove">
                    <td><p><=1000</p></td>
                    <td><p>1000</p></td>
                </tr>
                <tr style="border-bottom: groove">
                    <td><p>>1000 e <=1500</p></td>
                    <td> <p>2000</p></td>
                </tr>
                <tr style="border-bottom: groove">
                    <td> <p>>1500 e <=2000</p></td>
                    <td> <p>3000</p></td>
                </tr>
                <tr style="border-bottom: groove">
                    <td> <p>>2000</p></td>
                    <td> <p>4000</p></td>
                </tr>
                <tr style="border-bottom: groove">
                    <td> <p><b>OBS: Valor de empréstimo minímo : R$100,00</b></p></td>
                    <td></td>
                </tr>
            </tbody>
        </table>
        <div class="form-group" id="Valor" style="position:absolute; top: 170px;">
            <label>Digite o valor</label>
            <input type="text" name="txtValor" class="form-control" style="width: 520px;  "/>
            <span class="text-warning"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Efetuar Empreste" style="width: 1100px;"/>
        </div>
        @if (value != null)
        {
            <h2>R$@value</h2>
        }
    </form>
</div>
