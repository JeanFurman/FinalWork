@{ 
    string value = ViewBag.Valor;
}
<div class="container">
    <form>
        <div asp-validation-summary="ModelOnly" class="text-warning"></div>

        <div class="form-group" id="Valor">
            <label>Digite o valor</label>
            <input type="text" name="txtValor" class="form-control" />
            <span class="text-warning"></span>
        </div>
        <iframe>Ola</iframe>
        <div class="form-group">
            <input type="submit" class="form-control" value="Efetuar Empreste" asp-action="Emprestimo" asp-controller="Transacao" />
        </div>
        @if (value != null)
        {
            <h2>R$@value</h2>
        }
    </form>
</div>
